# Azure OpenAI Configuration
VITE_AZURE_OPENAI_ENDPOINT=https://YOUR-RESOURCE.openai.azure.com
VITE_AZURE_OPENAI_API_KEY=your-api-key-here
VITE_AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o
VITE_AZURE_OPENAI_API_VERSION=2024-08-01-preview

# Azure OpenAI Multimodal Deployments
# Vision is handled by the main deployment (gpt-4o supports vision natively)
VITE_AZURE_OPENAI_VISION_DEPLOYMENT=gpt-4o

# Audio Services
VITE_AZURE_OPENAI_WHISPER_DEPLOYMENT=whisper
VITE_AZURE_OPENAI_AUDIO_DEPLOYMENT=gpt-4o-audio-preview

# Image Generation
VITE_AZURE_OPENAI_IMAGE_DEPLOYMENT=dall-e-3
VITE_AZURE_OPENAI_IMAGE_ENDPOINT=https://YOUR-RESOURCE.openai.azure.com

# Azure Speech Service (for TTS)
VITE_AZURE_SPEECH_KEY=your-speech-key-here
VITE_AZURE_SPEECH_REGION=eastus

# Optional: Azure Storage for large file uploads
VITE_AZURE_STORAGE_ACCOUNT=your-storage-account
VITE_AZURE_STORAGE_KEY=your-storage-key
